print ('Task #1')
kms = float(input('How many km are given? '))
mins = float(input('How many minutes are given? '))
secs = float(input('How many seconds are given? '))
avertimepermile = (((mins * 60) + secs)/ (kms/1.61))/60
print ('Answer for task #1: ', avertimepermile)
print ('Task #2')
averspeedinmilesperh = (kms/1.61)/(((mins * 60)+ secs)/3600)
print ('Answer for task #2: ', averspeedinmilesperh)
